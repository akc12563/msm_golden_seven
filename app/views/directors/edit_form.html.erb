<h1>Edit Director</h1>

<form action="/update_director/<%= @dir_edit.id %>">
  <div>
    <label for="pic_input">
      Image URL
    </label>

    <input id="pic_input" type="text" name="image_url" value="<%= @dir_edit.image_url %>" >
  </div>

  <div>
    <label for="name_input">
      Name
    </label>

    <input id="name_input" type="text" name="name" value="<%= @dir_edit.name %>">
  </div>
  <div>
    <label for="bio_input">
      bio
    </label>

    <input id="bio_input" type="text" name="bio" value="<%= @dir_edit.bio %>">
  </div>
  <div>
    <label for="dob_input">
      Date of Birth
    </label>

    <input id="dob_input" type="text" name="dob" value="<%= @dir_edit.dob %>">
  </div>

  <button>
    Update Director
  </button>
</form>
